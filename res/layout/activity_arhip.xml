<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <!-- avatar -->

                <RelativeLayout
                    android:id="@+id/avatar"
                    android:layout_width="match_parent"
                    android:layout_height="70dp" >

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/avatar_corner"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/mother" />

                    <com.algha.boshuk.widget.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:gravity="right|center"
                        android:textColor="#000000"
                        android:textSize="12sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="10dp"
                    android:background="#f2f2f2" />

                <!-- name -->

                <RelativeLayout
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <com.algha.boshuk.widget.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="left|center"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <com.algha.boshuk.widget.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:gravity="right|center"
                        android:textColor="#000000"
                        android:textSize="12sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="10dp"
                    android:background="#f2f2f2" />

                <!-- jins -->

                <RelativeLayout
                    android:id="@+id/jins"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <com.algha.boshuk.widget.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="left|center"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <com.algha.boshuk.widget.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:gravity="right|center"
                        android:textColor="#000000"
                        android:textSize="12sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="10dp"
                    android:background="#f2f2f2" />

                <!-- birthday -->

                <RelativeLayout
                    android:id="@+id/birthday"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <com.algha.boshuk.widget.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="right|center"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <com.algha.boshuk.widget.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:gravity="right|center"
                        android:textColor="#000000"
                        android:textSize="12sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#f2f2f2" />

                <!-- balaismi -->

                <RelativeLayout
                    android:id="@+id/balaismi"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <com.algha.boshuk.widget.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="right|center"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <com.algha.boshuk.widget.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:gravity="right|center"
                        android:textColor="#000000"
                        android:textSize="12sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="10dp"
                    android:background="#f2f2f2" />

                <!-- bala_jinsi -->

                <RelativeLayout
                    android:id="@+id/bala_jinsi"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <com.algha.boshuk.widget.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="right|center"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <com.algha.boshuk.widget.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:gravity="right|center"
                        android:textColor="#000000"
                        android:textSize="12sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="10dp"
                    android:background="#f2f2f2" />

                <!-- bala_birthday -->

                <RelativeLayout
                    android:id="@+id/bala_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <com.algha.boshuk.widget.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="right|center"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <com.algha.boshuk.widget.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:gravity="right|center"
                        android:textColor="#000000"
                        android:textSize="12sp" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="10dp"
                    android:background="#f2f2f2" />

                <com.algha.boshuk.widget.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="right|center"
                    android:text="@string/ikki_kelime_siz"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <com.algha.boshuk.widget.MyEditText
                    android:id="@+id/sign"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/sign_textview"
                    android:gravity="right|top"
                    android:padding="5dp"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/sign_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="left|top"
                    android:textColor="#a0a0a0"
                    android:textSize="10sp" />

                

                <com.algha.boshuk.widget.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="@string/profile_service_info"
                    android:textColor="#a0a0a0"
                    android:textSize="10sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>