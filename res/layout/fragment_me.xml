<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/red_gradient"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="3dp" >

                    <ImageView
                        android:id="@+id/user_dvatar"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="7dp"
                        android:background="@drawable/avatar_corner"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/mother" />

                    <com.algha.boshuk.widget.MyTextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="80dp"
                        android:layout_marginTop="12dp"
                        android:gravity="right|center"
                        android:textColor="#ffffff"
                        android:textSize="13sp" />

                    <com.algha.boshuk.widget.MyTextView
                        android:id="@+id/halet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="12dp"
                        android:layout_marginRight="80dp"
                        android:gravity="right|center"
                        android:textColor="#ffffff"
                        android:textSize="10sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#f95870"
                    android:orientation="horizontal" >

                    <com.algha.boshuk.widget.MyButton
                        android:id="@+id/ziyaret_tarihi"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableRight="@drawable/clock"
                        android:paddingLeft="35dp"
                        android:paddingRight="45dp"
                        android:text="@string/ziyaret_tarihi"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#ffffff" />

                    <com.algha.boshuk.widget.MyButton
                        android:id="@+id/saqlanmilar"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableRight="@drawable/star"
                        android:paddingLeft="45dp"
                        android:paddingRight="55dp"
                        android:text="@string/saqlanmilar"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#ffffff"
                    android:orientation="horizontal" >

                    <com.algha.boshuk.widget.MyButton
                        android:id="@+id/baha_berix"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableTop="@drawable/baha_berix"
                        android:paddingBottom="4dp"
                        android:paddingTop="8dp"
                        android:text="@string/baha_berix"
                        android:textSize="10sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#f2f2f2" />

                    <com.algha.boshuk.widget.MyButton
                        android:id="@+id/pul_tolenmigen"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableTop="@drawable/pul_tolenmigen"
                        android:paddingBottom="4dp"
                        android:paddingTop="8dp"
                        android:text="@string/pul_tolenmigen"
                        android:textSize="10sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#f2f2f2" />

                    <com.algha.boshuk.widget.MyButton
                        android:id="@+id/ewetilgen"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableTop="@drawable/ewetilgen"
                        android:paddingBottom="4dp"
                        android:paddingTop="8dp"
                        android:text="@string/ewetilgen"
                        android:textSize="10sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#f2f2f2" />

                    <com.algha.boshuk.widget.MyButton
                        android:id="@+id/qayturulghan"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableTop="@drawable/qayturulghan"
                        android:paddingBottom="4dp"
                        android:paddingTop="8dp"
                        android:text="@string/qayturulghan"
                        android:textSize="10sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#f2f2f2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="#ffffff"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="#ffffff"
                        android:orientation="horizontal" >

                        <com.algha.boshuk.widget.MyButton
                            android:id="@+id/iltimasim"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawableTop="@drawable/iltimasim"
                            android:paddingTop="8dp"
                            android:text="@string/iltimasim"
                            android:textSize="12sp" />

                        <com.algha.boshuk.widget.MyButton
                            android:id="@+id/mal_harwam"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawableTop="@drawable/mal_harwam"
                            android:paddingTop="8dp"
                            android:text="@string/mal_harwam"
                            android:textSize="12sp" />

                        <com.algha.boshuk.widget.MyButton
                            android:id="@+id/qalduqum"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawableTop="@drawable/qalduqum"
                            android:paddingTop="8dp"
                            android:text="@string/qalduqum"
                            android:textSize="12sp" />

                        <com.algha.boshuk.widget.MyButton
                            android:id="@+id/jughlanmam"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawableTop="@drawable/jughlanmam"
                            android:paddingTop="8dp"
                            android:text="@string/jughlanmam"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="#ffffff"
                        android:orientation="horizontal" >

                        <com.algha.boshuk.widget.MyButton
                            android:id="@+id/soalim"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawableTop="@drawable/soalim"
                            android:paddingTop="8dp"
                            android:text="@string/soalim"
                            android:textSize="12sp" />

                        <com.algha.boshuk.widget.MyButton
                            android:id="@+id/temilirim"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawableTop="@drawable/temilirim"
                            android:paddingTop="8dp"
                            android:text="@string/temilirim"
                            android:textSize="12sp" />

                        <com.algha.boshuk.widget.MyButton
                            android:id="@+id/egeshkinim"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawableTop="@drawable/egeshkinim"
                            android:paddingTop="8dp"
                            android:text="@string/egeshkinim"
                            android:textSize="12sp" />

                        <com.algha.boshuk.widget.MyButton
                            android:id="@+id/egeshkuchilirim"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawableTop="@drawable/egeshkuchilirim"
                            android:paddingTop="8dp"
                            android:text="@string/egeshkuchilirim"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#f2f2f2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:background="#ffffff"
                    android:orientation="vertical" >

                    <!-- chikinish -->

                    <RelativeLayout
                        android:id="@+id/my_home"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/more" />

                        <com.algha.boshuk.widget.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:gravity="left|center"
                            android:textColor="#b7b7b7"
                            android:textSize="9sp" />

                        <com.algha.boshuk.widget.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="40dp"
                            android:gravity="right|center"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/my_home" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#f2f2f2" />

                    <!-- halet -->

                    <RelativeLayout
                        android:id="@+id/halet_list"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/more" />

                        <com.algha.boshuk.widget.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:gravity="left|center"
                            android:textColor="#b7b7b7"
                            android:textSize="9sp" />

                        <com.algha.boshuk.widget.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="40dp"
                            android:gravity="right|center"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/halet_ozgirix" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#f2f2f2" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>